<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">64dp</item>
    </style>

    <style name="FlashMessageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">128dp</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@color/colorGray</item>
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="NumberInputStyle">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789,</item>
        <item name="android:maxLength">4</item>
    </style>

</resources>
